<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        %{SCRIPTS}
        <title>Untitled</title>
        <style>
            html, body {
                margin: 0;
                height: 100%;
            }
            body {
                font-family: Arial, Helvetica, sans-serif;
            }
            header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0.5em;
                background-color: #eee;
            }
            header>span:not(:nth-of-type(2)) {
                flex-grow: 1;
                flex-basis: 0;
            }
            header button {
                border: none;
            }

            .dropdown {
                position: relative;
                display: inline-block;
            }

            .dropdown div {
                display: none;
                position: absolute;
            }

            .dropdown:hover div {
                display: block;
            }
        </style>
        <script type="text/typescript">
            const documentTitleState = JSX.createState(document.title).format(title=>`${title} - SHML Editor`);
            documentTitleState.connectCallback(t=>document.title=t);
        </script>
        <script type="text/typescript">
            function Dropdown(props, label, ...children) {
                return <div class="dropdown">
                    <span>{label}</span>
                    <div>
                        {children}
                    </div>
                </div>
            }
        </script>
    </head>
    <body>
        <header>
            <span><button>File</button><button>Edit</button><button>View</button><button>Help</button></span>
            <span>
                <script type="text/typescript">
                    $host.replaceChildren(<span>{documentTitleState}</span>)
                </script>
            </span>
            <span></span>
        </header>
        <main>
            <section id="sidebar"></section>
            <section id="workspace"></section>
            <script type="text/typescript">
                $host.replaceChildren(<Dropdown>
                    <label>Files</label>    
                    <button>New</button>
                    <button>Open</button>
                </Dropdown>)
            </script>
        </main>
        <footer>

        </footer>
    </body>
</html>