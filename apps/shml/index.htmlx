<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        %{SCRIPTS}
        <title>Untitled</title>
        <script %{TS}>
            const {Shadow} = Elements

            function xprompt() {
                return new Promise(function(resolve) {
                    let modal;
                    function submit() {
                        modal.remove();
                        resolve(1)
                    }

                    document.body.append(modal=<Shadow>
                        <style>
                            {`button {
                                border: none;
                            }`}
                        </style>
                        <button onclick={submit}>Resolve</button>
                    </Shadow>)
                })
            }
        </script>
